<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:clickable="true"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="5dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">

        <ImageView
            android:contentDescription="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/cardview_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/cardview_title"
            android:fontFamily="serif"
            android:textSize="24sp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/text_edge_padding_infopopup"
            android:paddingRight="@dimen/text_edge_padding_infopopup"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"/>

        <TextView
            android:paddingLeft="@dimen/text_edge_padding_infopopup"
            android:paddingRight="@dimen/text_edge_padding_infopopup"
            android:paddingBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_body"
            android:id="@+id/cardview_distance"/>

        <TextView
            android:paddingLeft="@dimen/text_edge_padding_infopopup"
            android:paddingRight="@dimen/text_edge_padding_infopopup"
            android:paddingBottom="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_body"
            android:id="@+id/cardview_elevation"/>

        <TextView
            android:paddingLeft="@dimen/text_edge_padding_infopopup"
            android:paddingRight="@dimen/text_edge_padding_infopopup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_body"
            android:lineSpacingMultiplier="1.3"
            android:id="@+id/cardview_summary"/>

        <RelativeLayout
            android:id="@+id/my_parent"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.medeozz.wikimap.ClickableFrameLayout
                android:id="@+id/cardview_button_navi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@drawable/background_selector">

                <TextView
                    android:textAllCaps="true"
                    android:textColor="@color/myAccent"
                    android:textSize="@dimen/md_button_textsize"
                    android:text="@string/navigate"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </com.medeozz.wikimap.ClickableFrameLayout>

            <com.medeozz.wikimap.ClickableFrameLayout
                android:id="@+id/cardview_button_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/background_selector">

                <TextView
                    android:textAllCaps="true"
                    android:textColor="@color/myAccent"
                    android:textSize="@dimen/md_button_textsize"
                    android:text="@string/full_Article"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

            </com.medeozz.wikimap.ClickableFrameLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>